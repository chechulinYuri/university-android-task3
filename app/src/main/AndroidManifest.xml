<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noveogroup.task3" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RootActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleActionBar"
            android:label="@string/title_activity_simple"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".ActionBarWithUpButton"
            android:label="@string/title_activity_action_bar_with_up_button"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".SplitActionBar"
            android:label="@string/title_activity_split_action_bar"
            android:theme="@style/Theme.AppCompat.Light"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".ActionBarWithTabs"
            android:label="@string/title_activity_action_bar_with_tabs"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".ActionBarWithNavigationList"
            android:label="@string/title_activity_action_bar_with_navigation_list"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".ActionBarWithCustomView"
            android:label="@string/title_activity_action_bar_with_custom_view"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".ActionBarWithCustomTheme"
            android:label="@string/title_activity_action_bar_with_custom_theme"
            android:theme="@style/Theme.Supertheme"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".ActionBarWithActionView"
            android:label="@string/title_activity_action_bar_with_action_view"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>
    </application>

</manifest>
